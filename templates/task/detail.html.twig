{% extends 'base.html.twig' %}

{% block title %}Todas las Tareas{% endblock %}


{% block body %}


<div class="example-wrapper pt-5">
    <h2 class="text-center">{{ task.title }}</h2>
    <p class="text-muted">
        {{task.user.name }} {{ task.user.surname }} | {{ task.createdAt|date('d/m/y') }} |
        {% if task.priority == 'high'%}
        Alta
        {% endif %}
        {% if task.priority == 'medium'%}
        Media
        {% endif %}
        {% if task.priority == 'low'%}
        Baja
        {% endif %}
        | {{ task.hours }}
    </p>
    <p>
        {{ task.content }}
    </p>


</div>
{% endblock %}
